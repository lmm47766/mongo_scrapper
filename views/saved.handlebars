<div class="row">
  <div class="col s12">
    <h1>Flixster Scraper</h1>
    <nav>
      <div class="nav-wrapper black">
        <ul class="left hide-on-med-and-down">
          <li><a href="/" class="btn green darken-3">Home</a></li>
          <li><a href="/articles" class="btn light-blue darken-4">Saved Movies</a></li>
          <li><a href="/scrape" class="clicky btn red darken-4">Flixster Scrape</a></li>
        </ul>
      </div>
    </nav>
  </div>
</div>

<div class="row">
  {{#each dbArticle}}
  <div class="col s12 div"> 
    <h4 class="headers blue-grey">{{title}} 
      <button class="btn indigo darken-4 right modal-trigger note" href="#comment-input" data-title="{{title}}" data-img="{{img}}" data-link="{{link}}" data-id="{{_id}}">Note</button> 
      <button class="btn red darken-4 delete right" data-title="{{title}}" data-img="{{img}}" data-link="{{link}}">Delete</button>
    </h4>
    <img class="col s4" src="{{img}}">
    <p class="col s8">Link: <a class="link" href="https://www.flixster.com{{link}}" target="_blank">https://www.flixster.com{{link}}</a></p>


    {{!-- comment input --}}
    <div id="comment-input" class="modal">
        <div class="modal-content">
            <div class="row"> 
                <h5>Enter you note down below</h5>
                <div class="input-field col s12">
                    <textarea placeholder="" id="comment-body" class="materialize-textarea"></textarea>
                    <label for="comment-body">Your Comment</label>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="modal-action modal-close waves-effect waves-green btn" id="submitButton">Submit</a>
        </div>
    </div>

  </div>
  {{/each}}
</div>

